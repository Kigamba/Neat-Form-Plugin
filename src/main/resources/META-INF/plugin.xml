<idea-plugin>
    <id>org.shan</id>
    <name>Simple</name>
    <version>1.0</version>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description>My Short Descriptionkldsljljljljdskkdslkdslkdslkdslkdslkdslklkdslkds</description>

    <change-notes>These are the change notessdklkdslkdslklkdslkdslkdslklkdslkdslkdslkdslk</change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <!--<idea-version since-build="145.0"/>-->

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <!--<extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="org.shan.SimpleFileTypeFactory"/>
    </extensions>-->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Neat Form JSON File" implementationClass="org.shan.SimpleFileType"
                  fieldName="INSTANCE" language="Neat Form JSON File" extensions="neatjson"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <lang.parserDefinition language="Neat Form JSON File"
                               implementationClass="org.shan.SimpleParserDefinition"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <lang.syntaxHighlighterFactory language="Neat Form JSON File"
                                       implementationClass="org.shan.SimpleSyntaxHighlighterFactory"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="Neat Form JSON File"
                                implementationClass="org.shan.completion_contributor.SimpleCompletionContributor"/>
    </extensions>


    <applicationListeners>
        <listener class="org.kigamba.simple.ProjectOpenCloseListener" topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <annotator language="JAVA" implementationClass="org.kigamba.simple.SimpleAnnotator"/>
        <!-- Declare the application level service -->
        <projectService serviceInterface="com.intellij.openapi.components.PersistentStateComponent"
                            serviceImplementation="com.jetbrains.jsonSchema.NeatFormJsonSchemaMappingsProjectConfiguration" />

        <annotator language="JSON" implementationClass="org.kigamba.neatform.JsonRulesFileChecker"/>

        <completion.contributor language="JSON"
                                implementationClass="org.kigamba.neatform.NeatFormJsonCompletionContributor"/>
        <psi.referenceContributor implementation="org.kigamba.neatform.NeatFormJsonReferenceContributor"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <idea-version since-build="193.3519.25"/>
</idea-plugin>
